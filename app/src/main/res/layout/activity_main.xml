<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/image_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Gallery"
        app:layout_constraintBottom_toTopOf="@+id/video_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/video_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Gallery"
        app:layout_constraintBottom_toTopOf="@+id/mixed_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_gallery" />

    <Button
        android:id="@+id/mixed_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixed Gallery"
        app:layout_constraintBottom_toTopOf="@+id/youtube_videos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_gallery" />

    <Button
        android:id="@+id/youtube_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Youtube Gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mixed_gallery" />

</androidx.constraintlayout.widget.ConstraintLayout>